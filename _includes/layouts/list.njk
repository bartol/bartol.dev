---
layout: page
collection: root
---
{% if collection === 'root' %}
is root
{% endif %}

{% include "components/nav.njk" %}

<ul class="items">
  {%- for item in collections[collection] | sortList(sort, collections) -%}
    <li>
      <a href="{{ item.url }}" class="item {{ item.url | urlToCollection(item.data.layout) }}">
        <h2>{{ item.data.title }}</h2>

        <h3>
          {% if collections[item.data.collection] %}

            {{ collections | getLength(item.data.collection) }}

          {% else %}

            Last updated in {{ item.date | formatDate }}

          {% endif %}
        </h3>
      </a>
    </li>
  {%- endfor -%}
</ul>
