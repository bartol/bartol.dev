---
layout: page
collection: root
---
{% if collection === 'root' %}
is root
{% endif %}

{% include "components/nav.njk" %}

<ul>
  {%- for post in collections[collection] | sortList(sort) -%}
    <li>
      <a href="{{ post.url }}">
        <h2>{{ post.data.title }}</h2>

        <h3>
          {% if collections[post.data.collection] %}

          {{ collections[post.data.collection] | length }}
          post{% if collections[post.data.collection] | length > 1 %}s{% endif %}

          {% else %}

          Last updated in {{ post.date | formatDate }}

          {% endif %}
        </h3>
      </a>
    </li>
  {%- endfor -%}
</ul>
