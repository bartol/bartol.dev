server {
    server_name bartol.dev www.bartol.dev;
    listen 443 ssl; # managed by Certbot

    location / {
        proxy_pass http://localhost:8080;
    }

    ssl_certificate /etc/letsencrypt/live/bartol.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/bartol.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    server_name bartol.dev www.bartol.dev;
    listen 80;

    if ($host = www.bartol.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = bartol.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    return 404; # managed by Certbot
}
