<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Bartol's personal cyberspace RSS Feed</title>
  <subtitle>Personal cyberspace where you can find my thoughts and notes mostly about web development. Updated daily.</subtitle>
  <link href="https://bartol.dev/rss.xml" rel="self"/>
  <link href="https://bartol.dev/"/>
  <updated>{{ collections.posts | rssLastUpdatedDate }}</updated>
  <id>https://bartol.dev/</id>
  <author>
    <name>Bartol Deak</name>
    <email>b@bartol.dev</email>
  </author>
  {%- for post in collections.posts %}
  {% set absolutePostUrl %}{{ post.url | url | absoluteUrl("https://bartol.dev/") }}{% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}"/>
    <updated>{{ post.date | rssDate }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
  </entry>
  {%- endfor %}
</feed>
