permalink: /til.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Bartol's Today I learned RSS</title>
  <subtitle>Stuff I learn every day</subtitle>
  <link href="https://bartol.dev/til.xml" rel="self"/>
  <link href="https://bartol.dev/"/>
  <updated>{{ collections.til | rssLastUpdatedDate }}</updated>
  <id>https://bartol.dev/</id>
  <author>
    <name>Bartol Deak</name>
    <email>b@bartol.dev</email>
  </author>
  {% for post in collections.til %}
  {% set absolutePostUrl %}
    {{ post.url | url | absoluteUrl("https://bartol.dev/") }}
  {% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}"/>
    <updated>{{ post.date | rssDate }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">
      {{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}
    </content>
  </entry>
  {% endfor %}
</feed>
